@model TodoList.Models.Todo

@{
    ViewData["標題"] = "Delete";
}

<h1>刪除</h1>

<h3>你確定要刪除該事項?</h3>
<div>
    <h4>事項</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.標題)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.標題)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.是否完成)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.是否完成)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
        <a asp-action="Index">回到待辦清單列表</a>
    </form>
</div>
